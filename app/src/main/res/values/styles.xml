<?xml version="1.0" encoding="utf-8"?><!-- AquÃ­ definimos conjuntos de estilos que aplicaremos en la app a elementos que no son personalizables desde su propio
        layout-->
<resources>

    <style name="toolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="toolbarMenuColor" >
        <item name="android:tint">#FFFFFFFF</item>
    </style>

    <!-- Estilo para definir el desplegable de los items (color de cada elemento desplegado)-->
    <style name="spinnerTextColor">
        <item name="android:textColor">#000000</item>
        <item name="android:dropDownSelector">#000000</item>
    </style>

    <style name="titleTextStyle" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="subtitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">27sp</item>
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="editTextHeaderText">
        <item name="android:textStyle"></item>
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="editTextInnerText">
        <item name="android:textStyle"></item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="currentText">
    <item name="android:textStyle"></item>
    <item name="android:textSize">15dp</item>
        <item name="fontFamily">@font/new_era_casual_regular</item>
    <item name="android:textColor">@color/textColor</item>
</style>

    <style name="spinnerHeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="dateTextStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="employeeSelectedTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/headstrong</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="monthTitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="instructionsText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/new_era_casual_regular</item>
    </style>

    <style name="profileSubtitleTextStyle">
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/grayPerfil</item>
    </style>

    <style name="profileCurrentTextStyle">
        <item name="fontFamily">@font/new_era_casual_regular</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/naranjaGradiente</item>
    </style>

    <style name="monthTitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="calendarDayTitleTextStyle">
        <item name="android:textStyle"></item>
        <item name="fontFamily">@font/new_era_casual_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calendarDayNumbersTextStyle">
        <item name="fontFamily">@font/new_era_casual_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="succesResultTextStyle">
        <item name="fontFamily">@font/new_era_casual_italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilos para botones -->
    <!-- AllCaps indica si todas las letras deben mostrarse en mayusculas. Por defecto, MaterialButton las muestra en mayusculas -->

    <style name="RectangularMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/disabled_color</item>
        <item name="strokeColor">@color/naranjaPersonalOscuro</item>
        <item name="elevation">8dp</item>
        <item name="android:translationZ">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/new_era_casual_bold</item>
    </style>

    <!-- Estilos para botones de borrar -->
    <style name="RejectRectangularButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/deny</item>
        <item name="strokeColor">@color/deny</item>
        <item name="elevation">8dp</item>
        <item name="android:translationZ">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/new_era_casual_bold</item>
    </style>


</resources>