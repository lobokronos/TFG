<!--Este layout se encarga de crear una fila horizontal de TextView para representar los nombres de los dias y el encabezado del mes-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">
        <!--El total de divisiones dentro de ese LinearLayout debe de ser 7 -->

        <include layout="@layout/calendar_day_title_text" />

        <include layout="@layout/calendar_day_title_text" />

        <include layout="@layout/calendar_day_title_text" />

        <include layout="@layout/calendar_day_title_text" />

        <include layout="@layout/calendar_day_title_text" />

        <include layout="@layout/calendar_day_title_text" />

        <include layout="@layout/calendar_day_title_text" />

        <!--Cada include mete un TextView por cada dia de la semana -->
    </LinearLayout>

